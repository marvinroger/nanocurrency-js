{
  "name": "nanocurrency",
  "description": "A toolkit for the Nano cryptocurrency, allowing you to derive keys, generate seeds, hashes, signatures, proofs of work and blocks.",
  "version": "2.5.0",
  "author": {
    "name": "Marvin ROGER",
    "email": "dev@marvinroger.fr",
    "url": "https://www.marvinroger.fr"
  },
  "bugs": "https://github.com/marvinroger/nanocurrency-js/issues",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "bignumber.js": "^9.0.1",
    "blakejs": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-wasm": "^5.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.20.28",
    "@types/puppeteer": "^5.4.4",
    "binaryen": "^102.0.0",
    "jest": "^27.2.5",
    "puppeteer": "^10.4.0",
    "rollup": "^2.58.0",
    "rollup-plugin-license": "^2.6.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "files": [
    "dist/"
  ],
  "homepage": "https://github.com/marvinroger/nanocurrency-js/tree/master/packages/nanocurrency",
  "keywords": [
    "crypto",
    "currency",
    "nano",
    "pow",
    "raiblocks"
  ],
  "license": "GPL-3.0",
  "main": "dist/bundles/nanocurrency.cjs-node.js",
  "module": "dist/bundles/nanocurrency.esm-node.js",
  "types": "dist/types/index.d.ts",
  "browser": {
    "./dist/bundles/nanocurrency.cjs-node.js": "./dist/bundles/nanocurrency.cjs-browser.js",
    "./dist/bundles/nanocurrency.esm-node.js": "./dist/bundles/nanocurrency.esm-browser.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marvinroger/nanocurrency-js.git"
  },
  "scripts": {
    "build:wasm": "docker run --rm -u $(id -u):$(id -g) -v \"$(pwd)/src/wasm:/app\" -w /app marvinroger/llvm:1 bash -c \"/app/scripts/build.sh\" && node ./src/wasm/scripts/optimize.js",
    "build:js": "rm -rf dist/bundles/ && rollup -c",
    "build:declarations": "rm -rf dist/types/ && tsc --emitDeclarationOnly",
    "build": "yarn build:wasm && yarn build:js && yarn build:declarations",
    "generate-docs": "fusee generate-docs",
    "lint": "fusee lint",
    "test": "jest",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "yarn build && yarn test && yarn lint && yarn generate-docs"
  }
}
