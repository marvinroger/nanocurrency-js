{
  "name": "nanocurrency",
  "description": "A toolkit for the Nano cryptocurrency, allowing you to derive keys, generate seeds, hashes, signatures, proofs of work and blocks.",
  "version": "2.5.0",
  "author": {
    "name": "Marvin ROGER",
    "email": "dev@marvinroger.fr",
    "url": "https://www.marvinroger.fr"
  },
  "bugs": "https://github.com/marvinroger/nanocurrency-js/issues",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "blakejs": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-wasm": "^5.1.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^13.7.7",
    "@types/puppeteer": "^5.4.3",
    "binaryen": "^101.0.0",
    "jest": "^26.6.3",
    "puppeteer": "^9.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-license": "^2.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.6"
  },
  "files": [
    "dist/"
  ],
  "homepage": "https://github.com/marvinroger/nanocurrency-js/tree/master/packages/nanocurrency",
  "keywords": [
    "crypto",
    "currency",
    "nano",
    "pow",
    "raiblocks"
  ],
  "license": "GPL-3.0",
  "main": "dist/nanocurrency.cjs.js",
  "module": "dist/nanocurrency.esm.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvinroger/nanocurrency-js.git"
  },
  "scripts": {
    "build:assembly": "docker run --rm -v \"$(pwd)/src/wasm:/app\" marvinroger/llvm:1 bash -c /app/scripts/build.sh",
    "build:dev": "yarn build:assembly && yarn build:dev:js",
    "build:dev:js": "rimraf dist/ && NODE_ENV=development rollup -c",
    "build:prod": "yarn build:assembly && node ./src/wasm/scripts/optimize.js && yarn build:prod:js",
    "build:prod:js": "rimraf dist/ && NODE_ENV=production rollup -c",
    "generate-docs": "fusee generate-docs",
    "lint": "fusee lint",
    "test": "jest",
    "prepublishOnly": "yarn build:prod && yarn test && yarn lint && yarn generate-docs"
  }
}
